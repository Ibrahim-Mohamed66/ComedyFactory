@using Domain.Enums
@using Domain.StaticData



<a href="javascript:void(0)" class="logo">
    <img src="/images/factory-comdey.png" alt="Logo" class="logo-lg">
    <img src="/images/factory-comdey.png" alt="Logo" class="logo-sm">
</a>
<div class="sidebar">
    <div class="sidebar-scroll">

        @if (User.IsInRole(RoleNames.Admin.ToString()))
        {
            <ul class="sidebar-menu">

                <li>
                    <a href="javascript:void(0)" class="has-arrow">
                        <i class="fa  fa-gears" aria-hidden="true"></i><span>@_localizer["Settings"]</span>
                    </a>
                    <ul>
                        <li class="@Html.IsSelected("Configuration", "Index,Edit,Create")">
                            <a asp-controller="Configuration" asp-action="Index">
                                <span>@_localizer["Configuration"]</span>
                            </a>
                        </li>

                        <li class="@Html.IsSelected("Country", "Index,Create,Edit")">
                            <a asp-controller="Country" asp-action="Index">
                                <span>@_localizer["Countries"]</span>
                            </a>
                        </li>

                        <li class="@Html.IsSelected("City", "Index,Create,Edit")">
                            <a asp-controller="City" asp-action="Index">
                                <span>@_localizer["Cities"]</span>
                            </a>
                        </li>


                        <li class="@(Html.GetId("blockType") == BlockType.SignUpBanner.ToString() ? "active" : "")">
                            <a asp-controller="Block" asp-action="Index" asp-route-blockType="@BlockType.SignUpBanner">
                                <span>@_localizer[BlockType.SignUpBanner.DisplayName()]</span>
                            </a>
                        </li>

                        <li class="@(Html.GetId("blockType") == BlockType.ThanksEmail.ToString() ? "active" : "")">
                            <a asp-controller="Block" asp-action="Index" asp-route-blockType="@BlockType.ThanksEmail">
                                <span>@_localizer[BlockType.ThanksEmail.DisplayName()]</span>
                            </a>
                        </li>

                        <li class="@Html.IsSelected("Users", "Index,Users")">
                            <a href="javascript:void(0)" class="has-arrow">
                                <span>@_localizer["Users"]</span>
                            </a>
                            <ul>

                                <li class="@Html.IsSelected("Users", "Index")">
                                    <a asp-controller="Users" asp-action="Index">
                                        <span>@_localizer["SystemUsers"]</span>
                                    </a>
                                </li>



                            </ul>
                        </li>









                    </ul>
                </li>




                <li class="@(Html.GetId("blockType") == BlockType.HomePage.ToString() ? "active" : "")">
                    <a asp-controller="Block" asp-action="Index" asp-route-blockType="@BlockType.HomePage">
                        <i class="fa  fa-server"></i> <span>@_localizer[BlockType.HomePage.DisplayName()]</span>
                    </a>
                </li>

                <li class="@Html.IsSelected("Desire", "Index,Create,Edit")">
                    <a asp-controller="Desire" asp-action="Index">
                        <i class="fa  fa-server"></i> <span>@_localizer["Desire"]</span>
                    </a>
                </li>

                <li class="@Html.IsSelected("MasterCategory", "Index,Create,Edit")">
                    <a asp-controller="MasterCategory" asp-action="Index">
                        <i class="fa  fa-server"></i> <span>@_localizer[" Master Category"]</span>
                    </a>
                </li>

                <li class="@Html.IsSelected("Professor", "Index,Create,Edit")">
                    <a asp-controller="Professor" asp-action="Index">
                        <i class="fa  fa-server"></i> <span>@_localizer["Professor"]</span>
                    </a>
                </li>

                <li class="@Html.IsSelected("Activity", "Index,Create,Edit")">
                    <a asp-controller="Activity" asp-action="Index">
                        <i class="fa  fa-server"></i> <span>@_localizer["Terms"]</span>
                    </a>
                </li>




                <li class="@Html.IsSelected("PersonalData", "Index")">
                    <a asp-controller="PersonalData" asp-action="Index">
                        <i class="fa  fa-server"></i> <span>@_localizer["Registrations"]</span>
                    </a>
                </li>


                @*                 <li class="@Html.IsSelected("Album", "Create,MediaGallery")">
                    <a asp-controller="Album" asp-action="Index">
                        <i class="fa  fa-server"></i> <span>Studio</span>
                    </a>
                </li> *@

                <li class="@Html.IsSelected("Logs", "Index")">
                    <a asp-controller="Logs" asp-action="Index">
                        <i class="fa  fa-server"></i> <span>@_localizer["Logs"]</span>
                    </a>
                </li>

            </ul>

        }

    </div>
</div>