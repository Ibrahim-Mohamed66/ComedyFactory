@model ConfigurationViewModel

@{
    ViewData["Title"] = _localizer["Create"];
    ViewData["Main"] = _localizer["Configurations"];
}


<div class="content-wrapper">
    <div class="page-title">
        <span class="title-data" data-main='@(ViewData["Main"])'>@ViewData["Title"]</span>
    </div>
    <div class="card main-card w-100">
        <div class="card-body">
            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="ArName" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="ArName" class="form-control" />
                        <small><span asp-validation-for="ArName" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EnName" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="EnName" class="form-control" />
                        <small><span asp-validation-for="EnName" class="form-text text-danger"></span></small>
                    </div>
                </div>



                <div class="form-group row">
                    <label asp-for="Facebook" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="Facebook" class="form-control" />
                        <small><span asp-validation-for="Facebook" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Twitter" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="Twitter" class="form-control" />
                        <small><span asp-validation-for="Twitter" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Youtube" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="Youtube" class="form-control" />
                        <small><span asp-validation-for="Youtube" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Tiktok" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="Tiktok" class="form-control" />
                        <small><span asp-validation-for="Tiktok" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Snapchat" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="Snapchat" class="form-control" />
                        <small><span asp-validation-for="Snapchat" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Instagram" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="Instagram" class="form-control" />
                        <small><span asp-validation-for="Instagram" class="form-text text-danger"></span></small>
                    </div>
                </div>

               
                <div class="form-group row">
                    <label asp-for="EmailSender" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="EmailSender" class="form-control" />
                        <small><span asp-validation-for="EmailSender" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PasswordEmailSender" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input type="text" asp-for="PasswordEmailSender" class="form-control" />

                        <small><span asp-validation-for="PasswordEmailSender" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Port" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input type="number" asp-for="Port" class="form-control" />
                        <small><span asp-validation-for="Port" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group  row">
                    <label asp-for="UseSSL" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                            <input type="checkbox" asp-for="UseSSL" class="custom-control-input">
                            <span class="custom-control-label"></span>
                            <label class="custom-control-description" asp-for="UseSSL"></label>
                        </label>
                    </div>
                </div>



                <div class="form-group row">
                    <label asp-for="Host" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="Host" class="form-control" />
                        <small><span asp-validation-for="Host" class="form-text text-danger"></span></small>
                    </div>
                </div>




                <div class="form-group row">
                    <label asp-for="DefaultEmailAddress" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="DefaultEmailAddress" class="form-control" />
                        <small><span asp-validation-for="DefaultEmailAddress" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DefaultEmailName" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="DefaultEmailName" class="form-control" />
                        <small><span asp-validation-for="DefaultEmailName" class="form-text text-danger"></span></small>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="GoogleAnalytics" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="GoogleAnalytics" class="form-control" />
                        <small><span asp-validation-for="GoogleAnalytics" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="GoogleAnalyticsEmail" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <input asp-for="GoogleAnalyticsEmail" class="form-control" />
                        <small><span asp-validation-for="GoogleAnalyticsEmail" class="form-text text-danger"></span></small>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="SEOScripts" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        @Html.EditorFor(model => model.SEOScripts)

                        <small><span asp-validation-for="SEOScripts" class="form-text text-danger"></span></small>
                    </div>
                </div>


            

                <div class="form-group  row">
                    <label asp-for="Hidden" class="col-xl-2 col-lg-3 col-form-label"></label>
                    <div class="col-xl-10 col-lg-9">
                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                            <input type="checkbox" asp-for="Hidden" class="custom-control-input">
                            <span class="custom-control-label"></span>
                            <label class="custom-control-description" asp-for="Hidden"></label>
                        </label>
                    </div>
                </div>


                <div class="d-flex justify-content-end">
                    <input type="submit" class="btn btn-primary" value="@_localizer["Save"]" />
                    <a asp-action="Index" class="btn btn-secondary d-inline-block ml-3">@_localizer["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>